    </cache-template>-->

    <cache alias="ticketCache">
        <key-type>java.lang.Long</key-type>
        <value-type>com.wojto.model.Ticket</value-type>
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>

        <resources>
            <heap unit="entries">2</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <cache alias="userCache">
        <key-type>java.lang.Long</key-type>
        <value-type>com.wojto.model.User</value-type>
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>

        <resources>
            <heap unit="entries">2</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

    <cache alias="userAccountCache">
        <key-type>java.lang.Long</key-type>
        <value-type>com.wojto.model.UserAccount</value-type>
        <expiry>
            <ttl unit="seconds">30</ttl>
        </expiry>

        <resources>
            <heap unit="entries">2</heap>
            <offheap unit="MB">10</offheap>
        </resources>
    </cache>

</config>

